<Window x:Class="milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:milestone1"
        mc:Ignorable="d"
        Title="Yelp App" Height="450" Width="600">
    <Grid>
        <Label x:Name="stateLabel" Content="State" HorizontalAlignment="Left" FontSize = "14" Margin="121,56,0,0" VerticalAlignment="Top"/>
        <Label x:Name="citylabel" Content="City" HorizontalAlignment="Left" Margin="121,123,0,0" FontSize ="14" VerticalAlignment="Top"/>
        <ComboBox x:Name="stateList" HorizontalAlignment="Left" Margin="267,67,0,0" FontSize="14" VerticalAlignment="Top" Width="212" SelectionChanged="stateList_SelectionChanged" />
        <ComboBox x:Name="cityList" HorizontalAlignment="Left" Margin="267,123,0,0" FontSize="14"  VerticalAlignment="Top" Width="212" SelectionChanged="cityList_SelectionChanged"/>
        <DataGrid x:Name="businessGrid" HorizontalAlignment="Left" Height="226" Margin="44,173,0,0" FontSize ="14" VerticalAlignment="Top" Width="510" SelectionChanged="businessGrid_SelectionChanged"/>

    </Grid>
</Window>
